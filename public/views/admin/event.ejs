<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Color Admin | Dashboard V3</title>
	<meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
	<meta content="" name="description" />
	<meta content="" name="author" />
	
	<!-- ================== BEGIN BASE CSS STYLE ================== -->
	<link href="../assets/css/transparent/app.min.css" rel="stylesheet" />
	<!-- ================== END BASE CSS STYLE ================== -->
	<!-- ================== BEGIN PAGE CSS ================== -->
	<link href="../assets/plugins/nvd3/build/nv.d3.css" rel="stylesheet" />
	<!-- ================== END PAGE CSS ================== -->
</head>
<body>
	<%- include("../../frame/loader") -%>

	<!-- begin #page-container -->
	<div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
		<%- include("../../frame/header") -%>
		<%- include("../../frame/sidebar") -%>
		
       <!-- begin #content -->
		<div id="content" class="content">
			<!-- begin breadcrumb -->
			<ol class="breadcrumb float-xl-right">
				<li class="breadcrumb-item"><a href="javascript:;">Admin</a></li>
				<li class="breadcrumb-item active">Event</li>
			</ol>
			<!-- end breadcrumb -->
			<!-- begin page-header -->
			<h1 class="page-header">
				Upload Event
            </h1>
            <div class="row">
                <!-- end page-header -->
                <div class="col-xl-8 col-lg-8 col-md-6 col-xs-12">
                    <!-- begin row -->
                    <div class="row" id="event_text">
                        <!-- begin col-8 -->
                        <div class="col-xl-12">
                            <!-- begin form-group row -->
                            <div class="form-group row m-b-10 text-center">
                                <h3 class="w-100 text-center">Event Content</h3>
                            </div>
                            <div class="form-group row m-b-10">
                                <label class="col-lg-3 text-lg-right col-form-label">Title <span class="text-danger">*</span></label>
                                <div class="col-lg-9 col-xl-6">
                                    <input id="event_title" type="text" placeholder="Enter Event Title" class="form-control" required/>
                                </div>
                                <small class="notiEvent text-red d-none">This value is required</small>
                            </div>
                            <!-- end form-group row -->
                            <div class="form-group row m-b-10">
                                <label class="col-lg-3 text-lg-right col-form-label">Description <span class="text-danger">*</span></label>
                                <div class="col-lg-9 col-xl-6">
                                    <textarea class="form-control" id="event_des" rows="5" type="text" placeholder="Enter Event Description" class="form-control" ></textarea>
                                </div>
                                <small class="notiEvent text-red d-none">This value is required</small>
                            </div>
                            <!-- end form-group row -->
                            <!-- begin form-group row -->
                            <div class="form-group row m-b-10">
                                <label class="col-lg-3 text-lg-right col-form-label">Header Text<span class="text-danger">*</span></label>
                                <div class="col-lg-9 col-xl-6">
                                    <textarea class="form-control"id="event_content1" rows="10" type="text" placeholder="Enter Header Event" class="form-control" ></textarea>
                                </div>
                                <small class="notiEvent text-red d-none">This value is required</small>
                            </div>
                            <!-- end form-group row -->	
                            <!-- begin form-group row -->
                            <div class="form-group row m-b-10">
                                <label class="col-lg-3 text-lg-right col-form-label">Body Text 1 <span class="text-danger">*</span></label>
                                <div class="col-lg-9 col-xl-6">
                                    <textarea class="form-control" id="event_content2" rows="10" type="text" placeholder="Enter Body 1 Event" class="form-control m-b-10" ></textarea>
                                </div>
                                <small class="notiEvent text-red d-none">This value is required</small>
                            </div>
                            <!-- end form-group row -->
                            <!-- begin form-group row -->
                            <div class="form-group row m-b-10">
                                <label class="col-lg-3 text-lg-right col-form-label">Body Text 2 <span class="text-danger">*</span></label>
                                <div class="col-lg-9 col-xl-6">
                                    <textarea class="form-control" id="event_content3" rows="10" type="text" placeholder="Enter Body 2 Event" class="form-control m-b-10" ></textarea>
                                </div>
                                <small class="notiEvent text-red d-none">This value is required</small>
                            </div>
                            <!-- end form-group row -->
                            <!-- begin form-group row -->
                            <div class="form-group row m-b-10">
                                <label class="col-lg-3 text-lg-right col-form-label">End Text <span class="text-danger">*</span></label>
                                <div class="col-lg-9 col-xl-6">
                                    <textarea class="form-control" id="event_content4" rows="10" type="text" placeholder="Enter Footer Event" class="form-control m-b-10" ></textarea>
                                </div>
                                <small class="notiEvent text-red d-none">This value is required</small>
                            </div>
                            <!-- end form-group row -->
                        </div>
                        <!-- end col-8 -->
                        <div class="col-12 text-center">
                            <a href="javascript:void(0)" id="btn_event_content" class="btn btn-primary" >SUBMIT</a>
                        </div>
                    </div>
                    <!-- end row -->
                    <!-- begin row -->
                    <div class="row d-none" id="event_img">
                        <!-- begin col-8 -->
                        <div class="col-xl-12">
                            <!-- begin form-group row -->
                            <div class="form-group row m-b-10 text-center">
                                <h3 class="w-100 text-center">Event Image</h3>
                            </div>
                            <div class="form-group row m-b-10">
                                <label class="col-lg-3 text-lg-right col-form-label">Title <span class="text-danger">*</span></label>
                                <div class="col-lg-9 col-xl-6">
                                    <input id="upload_img_event" type="file" name="firstname" placeholder="Enter News Title" class="form-control" required/>
                                </div>
                                <small class="notiEvent text-red d-none">This value is required</small>
                            </div>
                            <!-- end form-group row -->
                            <div class="text-center m-b-10" id="previewImgBounce">
                                <img id="previewImg" src="../assets/default.png" alt="">
                            </div>
                        </div>
                        <!-- end col-8 -->
                        <div class="col-12 text-center">
                            <a href="javascript:void(0)" id="btn_event_img" class="btn btn-primary" >SUBMIT</a>
                        </div>
                    </div>
                    <!-- end row -->
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-xs-12 m-t-20">
                    <% events.forEach((item)=>{%>
                        <div class="col-xl-8 col-lg-8 col-md-8 col-xs-12" id="<%= item.eventId %>">
                            <div class="card-group">
                                <!-- begin card -->
                                <div class="card">
                                    <img class="card-img-top" src="../assets/avatars/<%= item.img %>" alt="Card image cap">
                                    <div class="card-body">
                                        <h4 class="card-title"><%= item.title %></h4>
                                        <p class="card-text"><%= (item.description.length < 87 ) ? item.description : item.description.slice(0,84) + "..." %></p>
                                        <a href="/details-event/<%= item.link %>-.-<%= item.eventId %>" class=" float-right btn btn-xs btn-outline-grey text-white">Details</a>
                                    </div>
                                </div>
                                <!-- end card -->
                            </div>
                            <!-- end card-group -->
                            <a href="javascript:;" class="remove-event btn btn-outline-danger m-t-10" data-eid="<%= item.eventId %>" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-remove-format"></i></a>
                            <hr>
                        </div>
                        
                    <% }); %>
                </div>
            </div>
		</div>
		<!-- end #content -->
		
		<!-- begin scroll to top btn -->
		<a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"><i class="fa fa-angle-up"></i></a>
		<!-- end scroll to top btn -->
	</div>
	<!-- end page container -->
	
	<!-- ================== BEGIN BASE JS ================== -->
	<script src="../assets/js/app.min.js"></script>
	<script src="../assets/js/theme/transparent.min.js"></script>
	<!-- ================== END BASE JS ================== -->
	<!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="../custom/notify.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
	<script src="/siofu/client.js"></script>
	<script src="../custom/uploadevent.js"></script>
	<script src="../custom/sidebar.js"></script>
	<!-- ================== END PAGE LEVEL JS ================== -->
</body>
</html>